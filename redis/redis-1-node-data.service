[Unit]
Description=Redis cluster 1 node data
After=docker.service
Requires=docker.service

[Service]
Environment=UNIT=%p
TimeoutStartSec=0
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/usr/bin/docker pull sheldonh/dvc
ExecStart=/bin/sh -c '/usr/bin/docker inspect ${UNIT} >/dev/null 2>&1 \
	|| /usr/bin/docker run --name ${UNIT} -v /data sheldonh/dvc /data:755:999:999'

[X-Fleet]
Global=true
MachineMetadata=hosts=redis-1
