[Unit]
Description=Redis cluster 1 node config
After=docker.service
Requires=docker.service

[Service]
Environment=UNIT=%p
TimeoutStartSec=0
ExecStart=/usr/bin/docker run --name ${UNIT} \
	-v /etc/redis \
	172.17.8.1:5000/busybox \
	/bin/sh -c 'echo appendonly yes > /etc/redis/redis.conf \
		&& chown -R 999 /etc/redis \
		&& echo volume container: ${UNIT}'

[X-Fleet]
Global=true
